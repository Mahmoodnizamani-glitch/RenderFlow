# Server
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info
NODE_ENV=development

# Database
DATABASE_URL=postgresql://renderflow:renderflow_dev@localhost:5432/renderflow

# Redis
REDIS_URL=redis://localhost:6379

# Auth
JWT_SECRET=change-me-in-production-min-16-chars
JWT_REFRESH_SECRET=change-me-too-in-production-min-16
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cloudflare R2
R2_ENDPOINT=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET=renderflow-videos

# CORS (comma-separated origins, or * for all)
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Payments / Webhooks
STRIPE_WEBHOOK_SECRET=
REVENUECAT_WEBHOOK_AUTH_KEY=

# Observability (optional â€” no-ops if not set)
SENTRY_DSN=
SENTRY_ENVIRONMENT=
POSTHOG_API_KEY=
