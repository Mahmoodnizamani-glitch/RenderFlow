{
    "annotations": {
        "list": []
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 0,
    "id": null,
    "links": [],
    "liveNow": false,
    "panels": [
        {
            "title": "Request Rate (req/s)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "rate(http_requests_total{app=\"renderflow-api\"}[5m])",
                    "legendFormat": "{{method}} {{route}} {{status}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps"
                }
            }
        },
        {
            "title": "Latency (P50 / P95 / P99)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{app=\"renderflow-api\"}[5m]))",
                    "legendFormat": "P50"
                },
                {
                    "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{app=\"renderflow-api\"}[5m]))",
                    "legendFormat": "P95"
                },
                {
                    "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{app=\"renderflow-api\"}[5m]))",
                    "legendFormat": "P99"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            }
        },
        {
            "title": "Error Rate (%)",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 0,
                "y": 8
            },
            "targets": [
                {
                    "expr": "sum(rate(http_requests_total{app=\"renderflow-api\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{app=\"renderflow-api\"}[5m])) * 100",
                    "legendFormat": "Error %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": 0
                            },
                            {
                                "color": "yellow",
                                "value": 5
                            },
                            {
                                "color": "red",
                                "value": 10
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Active WebSocket Connections",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 6,
                "y": 8
            },
            "targets": [
                {
                    "expr": "websocket_connections_active{app=\"renderflow-api\"}",
                    "legendFormat": "Active"
                }
            ]
        },
        {
            "title": "HTTP Status Code Distribution",
            "type": "piechart",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 8
            },
            "targets": [
                {
                    "expr": "sum by (status) (increase(http_requests_total{app=\"renderflow-api\"}[1h]))",
                    "legendFormat": "{{status}}"
                }
            ]
        },
        {
            "title": "Database Connection Pool",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 16
            },
            "targets": [
                {
                    "expr": "pg_pool_active_connections{app=\"renderflow-api\"}",
                    "legendFormat": "Active"
                },
                {
                    "expr": "pg_pool_idle_connections{app=\"renderflow-api\"}",
                    "legendFormat": "Idle"
                },
                {
                    "expr": "pg_pool_total_connections{app=\"renderflow-api\"}",
                    "legendFormat": "Total"
                }
            ]
        }
    ],
    "schemaVersion": 38,
    "style": "dark",
    "tags": [
        "renderflow",
        "api"
    ],
    "templating": {
        "list": []
    },
    "time": {
        "from": "now-6h",
        "to": "now"
    },
