{
    "name": "@renderflow/shared",
    "version": "0.0.1",
    "private": true,
    "description": "Shared TypeScript types, constants, and validation schemas for RenderFlow",
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "default": "./src/index.ts"
        }
    },
    "scripts": {
        "lint": "eslint \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "test": "jest --verbose"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "src"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "factories\\.ts$"
        ]
    },
    "dependencies": {
        "zod": "^3.24.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.6",
        "typescript": "^5.6.0"
    }
}